<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical" >

    <Button
        android:id="@+id/view_popupmenu_item_btn_changelang"
        style="@style/PopupmenuItem"
        android:text="change language" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="@color/popupmenu_item_dividor_bg" />

    <Button
        android:id="@+id/view_popupmenu_item_btn_savelocation"
        style="@style/PopupmenuItem"
        android:text="save location" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="@color/popupmenu_item_dividor_bg" />

    <Button
        android:id="@+id/view_popupmenu_item_btn_footprint"
        style="@style/PopupmenuItem"
        android:text="footprint" />

</LinearLayout>